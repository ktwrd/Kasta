@using Kasta.Data.Models
@using Kasta.Web.Models.Components
@model UserModel

@{
    ViewBag.Title = "Profile";
    Layout = "_Layout";

    var themeValues = new List<FormSelectItem>()
    {
        new()
        {
            Value = "",
            Label = "Default"
        },
        new()
        {
            Value = "dark",
            Label = "Dark"
        },
        new()
        {
            Value = "light",
            Label = "Light"
        },
        new()
        {
            Value = "2010",
            Label = "2010 Theme"
        }
    };
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-controller="Profile" asp-action="Save" enctype="multipart/form-data">
                    <div class="mb-3">
                        @await Component.InvokeAsync("FormSelect", new FormSelectComponentViewModel()
                        {
                            Name = "ThemeName",
                            Id = "themeName",
                            Label = "Theme",
                            Multiple = false,
                            Items = themeValues,
                            SelectedValue = string.IsNullOrEmpty(Model.ThemeName) ? "" : Model.ThemeName
                        })
                    </div>
                    <hr/>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>

    </div>
</div>