@using Kasta.Web.Helpers
@model BaseAlertViewModel

@if (!string.IsNullOrEmpty(Model.AlertClass) && !string.IsNullOrEmpty(Model.AlertContent))
{
    <div class="@Model.AlertClass" role="alert">
        @if (Model.AlertContentAsMarkdown)
        {
            var str = KastaWebHelper.MarkdownToHtmlBasic(Model.AlertContent);
            @Html.Raw(str);
        }
        else
        {
            @Model.AlertContent
        }

        @if (Model.ShowAlertCloseButton)
        {
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        }
    </div>
}
