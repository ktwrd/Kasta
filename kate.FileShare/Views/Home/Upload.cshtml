@{
    ViewData["Title"] = "Upload";
    Layout = "_Layout";
}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-10">
                <div class="progress h-100">
                    <div class="progress-bar progress-bar-animated progress-bar-striped" style="width: 0;" id="uploadProgess"></div>
                </div>
            </div>
            <div class="col-2 text-center">
                <button button type="button" class="btn btn-sm btn-outline-danger btn-block" onclick="Dropzone.instances[0].removeAllFiles(true)" data-toggle="tooltip" title="{{ lang('cancel') }}">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <form asp-controller="Home" asp-action="UploadPost" asp-route-returnJson="true" method="post" enctype="multipart/form-data" id="upload-dropzone" class="dropzone">
                    <div class="fallback">
                        <input name="file" type="file" multiple>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
